<mvc:View
	xmlns="sap.ui.table"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	controllerName="com.ey.hcp.eis.controller.Main">

	<m:App>
			<m:Page>
				<m:content>
					<f:SimpleForm>
						<u:FileUploader
							id="fileUploader"
							name="myFileUpload"
							uploadUrl="ws/service/document/upload/ztDH3fwiiaAPVtIHLl3Sv8zFik5FjMVJtn6ZZu8UDyQ"
							tooltip="Upload your file to the local server"
							style="Emphasized"
							fileType="jpg"
							placeholder="Choose a file for Upload...">
						</u:FileUploader>
						<m:Button text="Submit" icon="sap-icon://accept" press="btnSubmitPressed" />
						<m:Label text="Enter Doc Id" />
                        <m:Input id="documentId" />
                        <m:Label text="" />
                        <m:Button text="Download" icon="sap-icon://download"  press="btnDownloadPressed" />
                        <m:Button text="Delete" icon="sap-icon://decline" press="btnDeletePressed" />
					</f:SimpleForm>
					
					<TreeTable
		                    id="TreeTableBasic"
		                    rows="{/}"
		                    selectionMode="MultiToggle"
		                    enableSelectAll="false"
		                    ariaLabelledBy="title">
		                <columns>
		                    <Column>
		                        <m:Label text="Doc"/>
		                        <template>
		                            <m:Text text="{name}"/>
		                        </template>
		                    </Column>
		                    <Column>
		                        <m:Label text="Action"/>
		                        <template>
		                        <m:FlexBox
									alignItems="Center"
									justifyContent="Center">
									<m:items>
										<m:Button text="delete" type="Reject" class="sapUiSmallMarginEnd" />
										<m:Button text="download" type="Accept" press="btnDownloadPressed" />
									</m:items>
								</m:FlexBox>
								</template>
		                    </Column>
		                </columns>
		            </TreeTable>
        
				</m:content>
			</m:Page>
	</m:App>

</mvc:View>