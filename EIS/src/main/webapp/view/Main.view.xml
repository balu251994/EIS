<mvc:View
	xmlns="sap.ui.table"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	controllerName="com.ey.hcp.eis.controller.Main">

	<m:App>
			<m:Page>
				<m:content>
					<f:SimpleForm>
						<u:FileUploader
							id="fileUploader"
							name="myFileUpload"
							tooltip="Upload your file to the local server"
							style="Emphasized"
							fileType="jpg"
							placeholder="Choose a file for Upload...">
						</u:FileUploader>

					</f:SimpleForm>
					
					<TreeTable
		                    id="TreeTableBasic"
		                    rows="{/}"
		                    selectionMode="MultiToggle"
		                    enableSelectAll="false"
		                    toggleOpenState="btnGetPressed"
		                    ariaLabelledBy="title">
		                   <toolbar>
			                    <m:Toolbar>
			                        <m:Title id="title" text="Title"/>
			                        <m:ToolbarSpacer/>
			                        <m:Button text="Add Folder to Root" press="addFolderRoot"/>
			                    </m:Toolbar>
			                </toolbar>
		                <columns>
		                    <Column>
		                        <m:Label text="Doc"/>
		                        <template>
		                            <m:Text text="{name}"/>
		                        </template>
		                    </Column>
		                    <Column>
		                        <m:Label text="Action"/>
		                        <template>
		                        <m:FlexBox
									alignItems="Center"
									justifyContent="Center">
									<m:items>
										<m:Button id="buttonDown" text="Download" type="Accept" press="btnDownloadPressed" class="sapUiSmallMarginEnd"/>
										<m:Button id="buttonAdd" text="Add Folder" press="btnAddFolderPressed" class="sapUiSmallMarginEnd"/>
										<m:Button id="buttonDelete" text="Delete" type="Reject" press="btnDeletePressed" class="sapUiSmallMarginEnd" />
										<m:Button id="buttonUp" text="Upload"  press="btnSubmitPressed" />
									</m:items>
								</m:FlexBox>
								</template>
		                    </Column>
		                </columns>
		            </TreeTable>
        
				</m:content>
			</m:Page>
	</m:App>

</mvc:View>