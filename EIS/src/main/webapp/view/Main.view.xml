<mvc:View
	xmlns="sap.ui.table"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	controllerName="com.ey.hcp.eis.controller.Main">

	<m:App>
			<m:Page>
				<m:content>
					<f:SimpleForm>
						<u:FileUploader
							id="fileUploader"
							name="myFileUpload"
							tooltip="Upload your file to the local server"
							style="Emphasized"
							fileType="jpg"
							placeholder="Choose a file for Upload...">
						</u:FileUploader>

					</f:SimpleForm>
					
					<TreeTable
		                    id="TreeTableBasic"
		                    rows="{/}"
		                    selectionMode="MultiToggle"
		                    enableSelectAll="false"
		                    ariaLabelledBy="title">
		                <columns>
		                    <Column>
		                        <m:Label text="Doc"/>
		                        <template>
		                            <m:Text text="{name}"/>
		                        </template>
		                    </Column>
		                    <Column>
		                        <m:Label text="Action"/>
		                        <template>
		                        <m:FlexBox
									alignItems="Center"
									justifyContent="Center">
									<m:items>
										<m:Button id="buttonGet" text="Get"  press="btnGetPressed" class="sapUiSmallMarginEnd" />
										<m:Button id="buttonDown" text="Download" type="Accept" press="btnDownloadPressed" class="sapUiSmallMarginEnd"/>
										<m:Button id="buttonMove" text="Move" press="btnMovePressed" class="sapUiSmallMarginEnd"/>
										<m:Button id="buttonUp" text="Upload" icon="sap-icon://accept" press="btnSubmitPressed" />
									</m:items>
								</m:FlexBox>
								</template>
		                    </Column>
		                </columns>
		            </TreeTable>
        
				</m:content>
			</m:Page>
	</m:App>

</mvc:View>