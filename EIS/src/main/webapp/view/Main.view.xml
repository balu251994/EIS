<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	controllerName="com.ey.hcp.eis.controller.Main">

	<App>
		<pages>
			<Page>
				<content>
					<f:SimpleForm>
						<u:FileUploader
							id="fileUploader"
							name="myFileUpload"
							uploadUrl="ws/service/document/upload/123/abc123"
							tooltip="Upload your file to the local server"
							style="Emphasized"
							fileType="jpg"
							placeholder="Choose a file for Upload...">
						</u:FileUploader>
						<Button text="Submit" icon="sap-icon://accept" press="btnSubmitPressed" />
						<Label text="Enter Doc Id" />
                        <Input id="documentId" />
                        <Label text="" />
                        <Button text="Download" icon="sap-icon://download"  press="btnDownloadPressed" />
                        <Button text="Delete" icon="sap-icon://decline" press="btnDeletePressed" />
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>

</mvc:View>